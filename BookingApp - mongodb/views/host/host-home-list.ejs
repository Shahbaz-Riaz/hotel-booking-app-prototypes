<%- include('../partials/head',{pageTitle: "Host Home List"}) %>

<%- include('../partials/nav') %>


  <!-- Homes List -->
  <main class="max-w-7xl mx-auto p-6">
    <h2 class="text-2xl font-semibold mb-6">Available Homes</h2>

    <ul class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
      <% if(homes.length === 0) { %>
        <p class="text-gray-500">No homes available. Please check back later.</p>
       
        <% } else { %>
      <% homes.forEach(h => { %>
        <li class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-lg transition">
          
          <!-- Image -->
          <div class="relative h-48 w-full">
            <img class="h-full w-full object-cover" 
                 src="<%= h.imagePath %>"
                 alt="Room Image" />
          </div>

          <!-- Content -->
          <div class="p-4 space-y-2">
            <h3 class="text-lg font-bold text-gray-900 truncate">
              <%= h.homeName %>
            </h3>
            <p class="text-sm text-gray-600 line-clamp-2">
              <%= h.description %>
            </p>

            <!-- Rating -->
            <div class="flex items-center text-yellow-500 text-sm">
              ⭐⭐⭐⭐☆ <span class="ml-2 text-gray-500">(24 reviews)</span>
            </div>

            <!-- Price and CTA -->
            <div class="flex justify-between items-center mt-3">
              <p class="text-xl font-semibold text-red-500">$<%= h.price %>/night</p>
              <button class="bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded-lg text-sm font-medium">
                Book Now
              </button>
            </div>
          </div>
        </li>
      <% }) %>
      <% } %>
    </ul>
  </main>
