<%- include('../partials/head') %>

  <body class="min-h-screen flex items-center justify-center bg-gray-100 p-6">
    
    
    <div class="w-full max-w-3xl bg-white shadow-lg rounded-2xl p-10">
      
      <%- include('../partials/nav') %> 
      
<!--       
      Title -->
      <h1 class="text-3xl font-bold text-center text-gray-800 mb-10 mt-1">
            <%= home ? '✏️ Update Your Home' : '🏡 Register Your Home' %>
      </h1>

      <form
        action="<%= home ? '/host/edit-home' : '/host/register-home' %>"
        method="POST"
        enctype="multipart/form-data"
        class="space-y-8"
      >
        <!-- Section 1: Basic Info -->
        <div>
          <h2 class="text-lg font-semibold text-gray-700 mb-4">
            Basic Information
          </h2>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <input type="hidden" name="homeId" value="<%= home ? home._id.toString() : ''%> " />
            
            <input
              type="text"
              name="homeName"
              placeholder="Home Name"
              value="<%= home ? home.homeName : '' %>"
              required
              class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-pink-400 focus:outline-none"
            />
            <input
              type="text"
              name="description"
              placeholder="Description"
              value="<%= home ? home.description : '' %>"
              required
              class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-pink-400 focus:outline-none"
            />
          </div>
        </div>

        <!-- Section 2: Pricing -->
        <div>
          <h2 class="text-lg font-semibold text-gray-700 mb-4">Pricing</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <input
              type="number"
              name="price"
              placeholder="Price per night"
              value="<%= home ? home.price : '' %>"
              required
              class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-pink-400 focus:outline-none"
            />
          </div>
        </div>

        <!-- Section 3: Photos -->
     <div>
  <h2 class="text-lg font-semibold text-gray-700 mb-4">Photos</h2>

  <% if (home && home.imagePath) { %>
    <p class="text-sm text-gray-600 mb-2">Current Image:</p>
    <img src="<%= home.imagePath %>" 
         alt="Home Image" 
         class="w-32 h-32 object-cover rounded-lg mb-4" />
  <% } %>

  <input
    type="file"
    name="image"
    <%= home ? "" : "required" %> 
    class="w-full text-sm text-gray-500 
           file:mr-4 file:py-2 file:px-4 
           file:rounded-full file:border-0 
           file:text-sm file:font-semibold 
           file:bg-pink-50 file:text-pink-600 
           hover:file:bg-pink-100"
  />

  <input type="hidden" name="existingImagePath" value="<%= home ? home.imagePath : '' %>" />
  <% if (home) { %>
    <p class="text-xs text-gray-400 mt-1">
      Leave this empty if you don't want to change the image.
    </p>
  <% } %>
</div>

        <!-- Submit -->
        <div>
          <button
            type="submit"
            class="w-full bg-pink-600 text-white py-3 rounded-xl font-semibold hover:bg-pink-700 transition"
          >
           <%= home ? '✅ Update Home' : '✅ Register Your Home' %>
          </button>
        </div>
      </form>
    </div>
  </body>
</html>
